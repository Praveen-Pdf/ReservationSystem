<div class="container mt-5">
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <p class="card-text"><b>Restaurant Name:</b><%= @booking.table.restaurant_name %></p>
    <p class="card-text"><b>Table Name:</b><%= @booking.table.table_name %></p>
    <hr>
    <p class="card-text"><b>Name:</b><%= @booking.name %></p>
    <p class="card-text"><%= @booking.email %> </p>
    <p class="card-text"><%= @booking.phone_no %> </p>
    <p class="card-text"><b>Date: </b><%= @booking.date %> </p>
    <p class="card-text"><b>Time: </b><%= @timeslot.name %> </p>
    <p class="card-text"><b>Notes:</b><%= @booking.notes %> </p>
    <%= link_to 'Edit Booking', edit_booking_path(table_id: @booking.table_id), class:"btn btn-primary" %>
    <%# <p class="card-text" style="background-color:rgb(200, 22, 16); text-align:center; color:white; border-radius:4px;padding:15px">Booking was cancelled</p> %>
</div>
</div>
<%= link_to 'Back', :back, class:"btn btn-secondary" %>

<%= @booking.inspect %>