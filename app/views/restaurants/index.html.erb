
<div class="container">
<h1>Restaurants</h1>

<% if user_signed_in? && current_user.role == 'admin' %>
<%= link_to 'New Restaurant', new_restaurant_path, class:"btn btn-primary", id:"rbtn" %>
<% end %>

<% @restaurants.each do |restaurant| %>
    
<div class="card">
  <%=image_tag("img.jpg", class:'card-img-top')%>
  <div class="card-body">
    <h5 class="card-title"><%= restaurant.name %></h5>
    <p class="card-text">Ph:  <%= restaurant.phone_no %></p>
    <p class="card-text"><%= restaurant.address %></p>
    <p class="card-text"><%= restaurant.start_time.strftime("%k:%M %P") %> - <%= restaurant.end_time.strftime("%k:%M %P") %></p>
    <p class="card-text"><small class="text-muted"><%= restaurant.email %></small></p>
    <p class="c-footer">
      <%= link_to 'Show', restaurant, class:"btn btn-primary" %>
      
      <% if current_user.role == 'admin'%>
      <%= link_to 'Edit', edit_restaurant_path(restaurant), class:"btn btn-primary" %>
      <%= link_to 'Add Table', new_restaurant_table_path(restaurant.id), class:"btn btn-primary" %>
      <%= link_to 'View Tables', restaurant_tables_path(restaurant.id), class:"btn btn-primary" %>
      <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
      <% end %> 
    
    </p>
  </div>
</div>
<% end %>
</div>